setTimeout(function () {
    jQuery('#total').hide().html("<%= j render partial:'cart_items_total_dashboard', locals: {total: total} %>").fadeIn('slow');
    jQuery('#cart_items').hide().html("<%= j render partial:'cart_items_dashboard',
                                      locals: {cart_items: cart_items, current_frames: current_frames} %>").fadeIn('slow');
    jQuery('#cart-header').hide().html(
        "<%= j render partial:'overrides/cart_header' %>").fadeIn('slow');
    jQuery('.loading-spinner').hide();

    function persian_number() {
        persian = {0: '۰', 1: '۱', 2: '۲', 3: '۳', 4: '۴', 5: '۵', 6: '۶', 7: '۷', 8: '۸', 9: '۹'};

        function traverse(el) {
            if (el.nodeType == 3) {
                var list = el.data.match(/[0-9]/g);
                if (list != null && list.length != 0) {
                    for (var i = 0; i < list.length; i++)
                        el.data = el.data.replace(list[i], persian[list[i]]);
                }
            }
            for (var i = 0; i < el.childNodes.length; i++) {
                traverse(el.childNodes[i]);
            }
        }

        traverse(document.body);
    }

    var ready;
    ready = function () {
        setTimeout(function () {
            persian_number();
        }, 100);
    };
    jQuery(document).ready(ready);

}, 1000);