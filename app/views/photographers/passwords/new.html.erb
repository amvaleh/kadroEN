<% @top_title = "فراموشی رمز عبور" %>
<%= render 'shared/join_dynamic_header' , title: @top_title %>
<section id="main">
  <div class="container">
    <div class="main">
      <div class="wrapper">
        <div class="row">
          <div class="col-md-6 col-sm-offset-3 col-sm-12">

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class: "form form-group" }) do |f| %>
            <%= devise_error_messages! %>

            <div class="col-sm-12">
              <%= f.label "ایمیل شما" %><br />
              <%= f.email_field :email, autofocus: true , class: "form-control" %>
            </div>
            <div class="col-sm-12 text-center" style="margin-top: 30px;">
              <%= f.submit "راهنمای تغییر رمز را برایم ارسال کن" , class: "btn btn-blue btn-block" %>
            </div>
            <div class="col-sm-12" style="margin-top: 30px;">
              <%= render "photographers/shared/links" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div><!-- /.main -->
</div><!-- /.container -->
</section>
