            <div class="col-3 m-0 p-1 testimonial " style="background-image: url(/img/home/3/1.jpg)">
            </div>
            <div class="col-3 m-0 p-1 testimonial"  style="background-image: url(/img/home/3/2.jpeg)">
            </div>
            <div class="col-3 m-0 p-1 testimonial"  style="background-image: url(/img/home/3/3.jpeg)">
            </div>
            <div class="col-3 m-0 p-1 testimonial"  style="background-image: url(/img/home/3/4.jpeg)">
            </div>
          </div>
