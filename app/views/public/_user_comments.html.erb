          <div class="row no-gutters align-items-center">
            <div class="col-3">
              <img alt="image" class="img-fluid rounded" src="<%=ShootType.find_by(w_url:"عکاسی-نوزاد").avatar_url(:mini) %>">
            </div>
            <div class="col-8 ml-auto">
