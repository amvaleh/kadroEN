  .testimonial{
    height: 5em;
    background-size: cover;
  }
</style>

<section class="fdb-block mt-0 pt-0" style="background-image: url(imgs/shapes/9.svg);">
  <div class="container">
    <div class="row text-center justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <h2>
          <%= t(:'general.home.section2.') %>
