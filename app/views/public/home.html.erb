<section class="fdb-block py-3 pt-5 bg-dark" id="home-expertise">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col col-md-8 text-center">
        <h2>
          <%= t(:'general.home.section3.title') %>
        </h2>
        <p class="text-center lead">
          <%= t(:'general.home.section3.subtitle') %>
        </p>
      </div>
    </div>
    <div class="row text-left mt-4 py-0 justify-content-center">
      <div class="col-12 col-sm-10 col-md-10 col-lg-12 mx-2">
        <div class="row">
          <div class="col-6">
            <button id="personal" class="btn btn-primary btn-block" style="height: 50px">
              <%= t(:'general.home.section3.buttons.button1') %>
            </button>
          </div>
          <div class="col-6">
            <button id="business" class="btn btn-outline-primary btn-block" style="height: 50px">
              <%= t(:'ggeneral.home.section3.buttons.button2') %>
            </button>
          </div>
        </div>
        <div class="container-fluid">
          <div class="row text-left mt-0 py-3 justify-content-center" id="personal_types">
            <% ShootType.all.is_personal.active.order("shoot_types.order").each do |sh| %>
              <%= render :partial => 'shoot_type_each' , locals:{sh:sh}%>
            <% end %>
          </div>
          <div class="row text-left mt-0 py-3 justify-content-center d-none" id="business_types">
            <% ShootType.all.is_business.active.order("shoot_types.order").each do |sh| %>
              <%= render :partial => 'shoot_type_each' , locals:{sh:sh} %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
