    <div class="row-50"></div>
    <div class="row text-center justify-content-center">
      <div class="col-8">
        <h3>
          <%= t(:'general.public.section3.subtitle3') %>
        </h3>
        <p class="lead">
        </p>
      </div>
    </div>
    <div class="row">
      <% Photographer.all.with_studio.approved.sort_by  {|ph| [ -ph.projects.checked_out.count , -(ph.qrate + ph.arate) ]}.first(4).each do |ph| %>
        <%= render '/public/home/single_ph', :@ph => ph %>
      <%end %>
