<section class="fdb-block team-1">
  <div class="container">
    <div class="row text-center justify-content-center">
      <div class="col-8">
        <h2>
         <%= t(:'general.public.section3.title') %>
        </h2>
        <p class="lead text-left">
          <%= t(:'general.public.section3.subtitle') %>
        </p>
      </div>
    </div>
    <div class="row-50"></div>
    <div class="row">
      <% Photographer.approved.sort_by  {|ph| [ -ph.projects.checked_out.count , -(ph.qrate + ph.arate) ]}.first(4).each do |ph| %>
        <%= render '/public/home/single_ph', :@ph => ph %>
      <%end %>
    </div>
    <div class="row-50"></div>
    <div class="row text-center justify-content-center">
      <div class="col-8">
        <h3>
         <%= t(:'general.public.section3.subtitle1') %>
        </h3>
        <p class="lead">
        </p>
      </div>
    </div>
