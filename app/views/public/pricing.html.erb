    <%= stylesheet_link_tag 'wordpress', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'wordpress', 'data-turbolinks-track': 'reload' %>
  <% end %>

  <style>
  #pills-tab {
  display: flex;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch; /* For smooth scrolling on iOS */
  padding-bottom: 10px; /* Optional: for better spacing */
}

.nav-item {
  margin-right: 10px; /* Optional: spacing between items */
}

.nav-pills {
  display: flex;
  flex-wrap: nowrap; /* Ensure items stay on a single row */
}

.nav-link {
  white-space: nowrap; /* Prevent wrapping of text */
  text-overflow: ellipsis; /* Add ellipsis if text overflows */
  overflow: hidden; /* Hide overflow if text is too long */
  display: flex;
  align-items: center;
}

.shoot-type-avatar {
  width: 20px; /* Size of the avatar */
  height: 20px; /* Size of the avatar */
  margin-right: 8px; /* Space between image and text */
}


  </style>
</head>
<%= render "public/shared/wordpress_header" %>

<%= render "public/pricing/intro" %>

<%#= render "public/pricing/features" %>

<%#= render "public/pricing/shoot_type_prices" %>

<section class="fdb-block bg-light py-5">
  <div class="container">
    

    <section class="fdb-block bg-light py-5">
      <div class="container">
        <div class="row text-center">
          <div class="col">
            <h2 class="mb-4 font-weight-bold"> Our photography packages <span class="badge bg-warning text-dark">10%
                OFF</span></h2>
            <p class="text-muted text-center">Get high-quality photography services at the best prices in Dubai.</p>
          </div>
        </div>

      <ul class="nav nav-pills mb-3 justify-content-start flex-nowrap overflow-auto" id="pills-tab" role="tablist">
        <% ShootType.active.each_with_index do |shoot_type, index| %>
          <li class="nav-item">
            <a class="nav-link <%= 'active' if index == 0 %>" id="pills-home-tab" data-toggle="pill"
              href="#content-<%= shoot_type.id %>" role="tab" aria-controls="pills-home" aria-selected="true" type="button">
      
              <!-- Image inside the <a> tag -->
              <img src="<%= shoot_type.avatar %>" alt="<%= shoot_type.title %>" class="shoot-type-avatar">
      
              <%= shoot_type.title %>
            </a>
          </li>
          <% end %>
      </ul>
        
<div class="tab-content mt-4">
  <% ShootType.active.order("shoot_types.order").each_with_index do |shoot_type, index| %>
    <div class="tab-pane fade <%= 'show active' if index == 0 %>" id="content-<%= shoot_type.id %>" role="tabpanel"
      aria-labelledby="content-<%= shoot_type.id %>-tab">

      <div class="row">
        <% ["photo", "video" , "combined" ].each do |category| %>
          <% packages=shoot_type.packages.active.order("packages.order").where(category: category) %>
            <% if packages.any? %>
              <div class="col-12 mb-4">
                <h4 class="text-left font-weight-bold">
                  <%= category.capitalize %> Packages
                </h4>
              </div>

              <% packages.each do |package| %>
                <div class="col-md-4 mb-4">
                  <div class="card border-0 shadow-sm p-4 text-center" style="border-radius: 12px;">
                    <div class="card-body">
                      <h5 class="card-title font-weight-bold text-uppercase">
                        <%= package.duration %>
                      </h5>
                      <ul class="list-unstyled text-left mt-3">
                        <li><span style="font-weight: bold; color: #555;">✓</span>
                          <%= package.feature_1 %>
                        </li>
                        <% if package.feature_2.present? %>
                          <li><span style="font-weight: bold; color: #555;">✓</span>
                            <%= package.feature_2 %>
                          </li>
                          <% end %>
                            <% if package.feature_3.present? %>
                              <li><span style="font-weight: bold; color: #555;">✓</span>
                                <%= package.feature_3 %>
                              </li>
                              <% end %>
                                <% if package.feature_4.present? %>
                                  <li><span style="font-weight: bold; color: #555;">✓</span>
                                    <%= package.feature_4 %>
                                  </li>
                                  <% end %>
                                    <% if package.feature_5.present? %>
                                      <li><span style="font-weight: bold; color: #555;">✓</span>
                                        <%= package.feature_5 %>
                                      </li>
                                      <% end %>
                      </ul>
                      <h4 class="text-dark font-weight-bold">
                        <small>
                          <s>
                            <%= package.real_price %>
                          </s>
                        </small>
                        <%= package.price %>
                      </h4>
                      <span class="badge bg-light text-dark p-2" style="border-radius: 8px; border: 1px solid #ddd;">10%
                        OFF</span>
                      <div class="mt-4">
                        <a href="https://wa.me/989932533239" class="btn btn-dark w-100" style="border-radius: 8px;">Book
                          Now</a>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>
                  <% end %>
                    <% end %>
      </div>

    </div>
    <% end %>
</div>



      </div>
    </section>
    
    <!-- Testimonials -->
    <h2 class="mt-5 text-center">What Our Clients Say</h2>
    <div class="row text-center">
      <div class="col-md-4">
        <blockquote class="blockquote">“Amazing experience! The team captured every moment beautifully.”<footer>- Sarah A.</footer></blockquote>
      </div>
      <div class="col-md-4">
        <blockquote class="blockquote">“Highly professional and affordable. Will book again.”<footer>- Ahmed R.</footer></blockquote>
      </div>
      <div class="col-md-4">
        <blockquote class="blockquote">“Best photography service in Dubai! The pictures were stunning.”<footer>- Fatima K.</footer></blockquote>
      </div>
    </div>


    <!-- CTA -->
    <div class="text-center mt-5">
      <a href="https://wa.me/989932533239" class="btn btn-dark btn-lg">Book Your Session Now</a>
    </div>
  </div>
</section>


