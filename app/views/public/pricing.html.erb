    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "serviceType": "Photography Packages",
      "provider": {
        "@type": "LocalBusiness",
        "name": "ShootEmpire",
        "image": "https://www.shootempire.com/img/shootempire.png",
        "url": "https://www.shootempire.com/",
