          "addressCountry": "AE"
        }
      },
      "hasOfferCatalog": {
        "@type": "OfferCatalog",
        "name": "Photography Packages in Dubai",
        "itemListElement": [
          <% ShootType.active.find_each do |shoot_type| %>
          {
            "@type": "Offer",
            "name": "<%= shoot_type.title %>",
            "description": "Professional <%= shoot_type.title.downcase %> sessions in Dubai.",
            "price": "<%= shoot_type.packages.first&.price || '0.00' %>",
            "priceCurrency": "AED",
            "url": "https://www.shootempire.com/<%= shoot_type.title.parameterize %>-photography",
            "availability": "https://schema.org/InStock"
          }<% if shoot_type != ShootType.active.last %>,<% end %>
          <% end %>
        ]
      }
    }
