<% if alert %>
  <div class="row justify-content-center" style="margin: 0 0 0.5% 0;">
    <p class=" alert alert-danger text-danger text-center" style="margin:0px;width: 100%;"><%= alert %></p>
  </div>
<% end %>
<% if notice %>
  <div class="row justify-content-center" style="margin: 0 0 0.5% 0;">
    <p class=" alert alert-success text-center" style="margin:0px;width: 100%;"><%=notice%></p>
  </div>
<% end %>
<% if @notice %>
  <div class="row justify-content-center" style="margin: 0 0 0.5% 0;">
    <p class=" alert alert-success text-center" style="margin:0px;width: 100%;"><%=@notice%></p>
  </div>
<% end %>