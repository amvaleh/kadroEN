    .mobile-sc-size{
      padding: 3px;
      border: 1px solid whitesmoke;
      display: inline;

    }
  }
  @media (max-width: 700px) {
    .mobile-sc-size{
      padding: 3px;
      border: 1px solid whitesmoke;
      display: inline;
    }
  }
</style>
<section class="fdb-block pt-0">
  <div class="container-fluid p-0 pb-md-5">
    <div  id="map" style="width: 100%;height:300px;">
    </div>
  </div>
  <!--  bread crumbs-->
  <div class="container">
    <div class="row align-items-center p-2">
      <div class="col-12">
        <p style="">
          <%= link_to "لیست مکان ها" , shoot_location_root_path %>   >   <%= link_to @shoot_location.title , shoot_location_show_path(@shoot_location.slug) %>
        </p>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-sm-6 m-auto col-md-6 pb-4 pb-md-0">
        <div class="row">
          <div id="studio_gallery"  data-responsive="<%=@shoot_location.shoot_location_attachments.each do |sha|%>img/<%=sha.photo_url%> 375 ,<%end %>" >
            <% if @shoot_location.shoot_location_attachments.present? %>
            <% @shoot_location.shoot_location_attachments.each_with_index do |sha, index| %>
              <div class="item col-6 col-md-12 col-lg-12 col-xl-12 bg-light mobile-sc-size" data-src="<%= sha.photo_url(:large) %>">
                <img class="mobile-sc-size img-replace" id=<%=sha.photo_url(:medium) %> src="<%= sha.photo_url(:thumb) %>" style="height: 180px; width:180px; object-fit: cover;" alt="<%=@shoot_location.title%> از مکان های عکاسی کادرو ">
              </div>
            <% end %>
          </div>
        <% else %>
          <img alt="image" class="img-fluid rounded" src="/img/location_picker.png" style="width: 100%;height: 200px; object-fit: contain !important;">
        <% end %>
       </div>
      </div>
      <script type="text/javascript">
          $(document).ready(function() {
              $("#studio_gallery").lightGallery({
                  selector: '.item'
              });
          });
      </script>
      <div class="col-12 ml-auto col-md-6 col-lg-5">
        <div class="row">
          <div class="col-12">
            <h1 class="text-right"><%= @shoot_location.title %></h1>
            <p class="text-right">
              <%= @shoot_location.shoot_location_type.title %>
              <%= link_to  shoot_location_type_filter_url(@shoot_location.shoot_location_type.title) do %>
                <small style="color:#a1a1a1">
                  مشاهده همه
                  <%=  @shoot_location.shoot_location_type.title %>
                  ها
                  <i class="fa fa-arrow-left"></i>
                </small>
              <% end %>
            </p>
            <p class=" text-right">
              <%= h auto_link(simple_format(@shoot_location.description), :html => {:class=>'lead',:target => '_blank'}) %>
            </p>
            <p class=" text-right"><%= @shoot_location.address.detail %></p>
          </div>
          <div class="col-12 text-center justify-content-center mb-5">
            <div class="btn-group mx-auto" style="direction: ltr;">
              <%= link_to "https://www.google.com/maps/dir/Current+Location/#{@shoot_location.address.lattitude},#{@shoot_location.address.longtitude}",class:"btn btn-success mt-4 mb-1 mb-md-0", target: :_blank do %>
                <span class="fa fa-location-arrow"></span> مسیریابی
              <%end %>
              <a class="btn btn-primary mt-4 mb-1 mb-md-0" href="<%= @base_url %>/book?shoot_location=<%= @shoot_location.slug %>">
                رزرو عکاس برای این مکان
              </a>
            </div>
          </div>
          <div class="col-12">
            <% if @owner_shoot_location_photographer.present? %>
              <p style="font-size: 12px !important;">
                معرفی این مکان توسط :
              </p>
              <p style="font-size: 15px !important;">
                <a href="https://pro.kadro.co/<%= @owner_shoot_location_photographer.uid %>">
                  <img alt="image" class="img-fluid rounded-circle" style="margin-left: 10px;" src="https://locations.kadro.co<%= @owner_shoot_location_photographer.avatar_url(:thumb) %>">
                  <%= @owner_shoot_location_photographer.abbrv_name %>
                </a></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>


<% if @shoot_location.shoot_type_locations.present? %>
  <section class="fdb-block pt-2">
    <div class="container">
      <div class="row">
        <div class="col text-center">
          <h2>مناسب رشته های عکاسی </h2>
        </div>
      </div>
      <div class="row pt-2 align-items-center">
        <% @shoot_location.shoot_type_locations.each do |sht| %>
          <div class="col-4 col-sm-3 m-sm-auto">
            <div class="row align-items-center">
              <div class="col-12 col-md-4">
                <img alt="عکاسی <%=sht.shoot_type.title%>" class="img-fluid rounded-circle" src="<%= assets_url(sht.shoot_type.avatar_url(:medium)) %>">
              </div>
              <div class="col-12 col-md-8">
                <h4 class="text-right"><%=sht.shoot_type.title%></h4>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
<% if @suggested_photographers.present? %>
  <section class="fdb-block team-3 pt-1">
    <div class="container">
      <div class="row text-center justify-content-center">
        <div class="col-8">
          <h2>عکاسان مناسب برای این مکان:</h2>
        </div>
      </div>
      <div class="row-70"></div>
      <div class="row text-center justify-content-center">
        <% @suggested_photographers.each do |ph| %>
          <div class="col-6 col-sm-2 m-sm-auto">
            <img alt="image" class="img-fluid rounded-circle" src="https://app.kadro.co<%= ph.avatar_url(:medium) %>">
            <h3><strong><%= ph.abbrv_name %></strong></h3>
            <p class="text-center"><a class="btn btn-dark mt-4 mb-5 mb-md-0" href="https://pro.kadro.co/<%= ph.uid %>" style="margin-top: 0px !important;">مشاهده</a></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<script>
    handler2 = Gmaps.build('Google');
    handler2.buildMap({
        provider: {
            zoomOut: 15,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            styles: mapStyleee,
        }, internal: {id: 'map'}
    }, function () {
        markers2 = handler2.addMarkers([
            <% if @shoot_location.address.present? %>
            {
                "lat": <%=@shoot_location.address.lattitude%>,
                "lng": <%=@shoot_location.address.longtitude%>,
                "picture": {
                    "url": "<%= @base_url %>img/land_logo.png",
                    "width": 50,
                    "height": 50
                },
                infowindow: '<h3 style="font-family: iranyekan-bold;"><%= @shoot_location.title %></h3><p class="text-center" style="font-family: iranyekan-light;"><%= @shoot_location.shoot_location_type.title %></p><%=link_to "رزرو اینجا" , "https://app.kadro.co/book?shoot_location=#{@shoot_location.slug}" ,class: "btn btn-primary",target: "_blank", style: "margin-right: 10px; font-family: iranyekan-bold;" %>'
            },
            <% end %>

        ]);
        handler2.bounds.extendWith(markers2);
        handler2.fitMapToBounds();
        handler2.getMap().setZoom(11);
    });
</script>
