<section class="fdb-block bg-gray">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6 m-md-auto ml-lg-0 col-lg-5">
        <img alt="image" class="img-fluid" src="<%=assets_url("/img/newsletterphotographers.png")%>">
      </div>
      <div id="subscribers_section" class="col-12 col-md-10 col-lg-6 mt-4 mt-lg-0 ml-auto mr-auto ml-lg-auto text-left" >
        <div class="row">
          <div class="col">
            <h2> <%= t(:'general.home.footer.titles.title1') %> </h2>
            <p class="lead text-left">
              <%= t(:'general.home.footer.titles.explain1') %>
            </p>
          </div>
        </div>
        <div class="row mt-4">
          <div class="col">
            <div class="input-group">
              <div class="input-group-append">
                <button class="btn btn-primary" type="button" onclick="submit_subscribers()"> <%= t(:'general.home.footer.titles.button') %> </button>
              </div>
              <input id="email_input" type="text" class="form-control" placeholder=" <%= t(:'general.home.footer.titles.explain2') %> ">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <p class="h4 text-left"> <%= t(:'general.home.footer.titles.explain3') %></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-10 col-lg-6 mt-4 mt-lg-0 ml-auto mr-auto ml-lg-auto text-center" id="tanks_submit_subscribers" style="display: none;">
        <img src="<%= root_url %>/img/checked-icon.png" alt="" style="height: 150px;">
        <div class="text-center" style="margin-top: 40px;">
          <h2>ایمیل شما ثبت شد</h2>
          <p>به زودی اولین کادرونامه را دریافت خواهید کرد</p>
        </div>
      </div>
    </div>
  </div>
</section>
<footer class="fdb-block footer-small bg-dark">
  <div class="container py-5">
    <div class="row align-items-top justify-content-center">


      <div class="col text-left">
        <nav class="nav flex-column">
          <a class="nav-link" href="<%=pricing_url %>">
            <%= t(:'general.home.footer.subtitles.subtitle16') %>  </a>
          <a class="nav-link" href="<%=print_prices_url %>"> <%= t(:'general.home.footer.subtitles.subtitle17') %>
          </a>
        </nav>
      </div>

      <div class="col text-left">
        <nav class="nav flex-column">
          <a class="nav-link" href="<%=about_us_url %>">
            <%= t(:'general.home.footer.titles.title6') %>
          </a>
          <a class="nav-link" href="<%=contact_us_url %>">
            <%= t(:'general.home.footer.subtitles.subtitle2') %>
          </a>
          <a class="nav-link" href="<%=join_us_url %>">
            <%= t(:'general.home.footer.titles.title5') %>
          </a>
        </nav>
      </div>

      <div class="col text-left">
        <h3 class="text-left">
          <strong> <%= t(:'general.home.footer.subtitles.subtitle18') %>  </strong>
        </h3>
        <p class="lead text-left">
          <a href="https://twitter.com/kadro_me" class="mx-2 "><i class="fa fa-twitter" aria-hidden="true"></i></a>
        </p>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col text-center" style="direction: ltr;">
        © 2017-2020 <%=link_to "Kadro", "https://www.kadro.me" %> All Rights Reserved.
      </div>
    </div>
  </div>
</footer>

<script type="text/javascript">
  function submit_subscribers() {
    $.ajax({
      type: "POST",
      url: "/subscribers",
      async: false,
      data: {
        email: $('#email_input').val()
      },
      success: function(data) {
        $("#subscribers_section").css('display','none');
        $("#tanks_submit_subscribers").css('display','block')
      }
    });
  }
</script>
