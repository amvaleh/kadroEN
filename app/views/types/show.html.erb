<% end %>
  <title>
    <%= @shoot_type.w_title %>
    | کادرو
  </title>
  <meta charset="UTF-8">
  <meta name="description"
        content="از
  <%= @cheapest_package.price%>
  تومان برای
  <%=@cheapest_package.duration%>
  عکاس
  <%=@shoot_type.title%>
